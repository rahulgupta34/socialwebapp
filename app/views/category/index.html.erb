<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <th scope="row"><%= category.id %></th>
                <td><%= category.name %></td>
                <td><%= link_to "Edit", edit_category_path(category) %></td>
            </tr>
        <% end %>

    </tbody>
</table>
