
<h1>Posts</h1>
<% content_for :head do  %>
    Posts
<% end %>
<div id="posts">
    <%= link_to "New post", new_post_path, class:"btn btn-success m-3" %>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Body</th>
                <th scope="col">Picture</th>
                <th scope="col">Show</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <%= render post %>
            <% end %>
        </tbody>
    </table>


</div>
