<h1 class="text-center text-success">Edit Your Comment</h1>
<%= form_with model: @comment, url: post_comment_path(@post.id,@comment.id) do |form| %>
    <div class="row justify-content-center">
        <div class="col-lg-3">
            <div class="form-group">
                <%= form.label :body, style: "display: block" %>
                <%= form.text_field :body, class:"form-control" %>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-lg-3">
            <%= form.submit "Edit Comment", class:"btn btn-success" %>
        </div>
    </div>

<% end %>


