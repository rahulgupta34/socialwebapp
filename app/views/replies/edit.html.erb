<h1 class="text-center text-success">Edit Reply</h1>

<% content_for :head do%>
    Reply Edit
<% end %>
<p class="text-center text-primary ">Add Reply</p>
<%= form_with model: @reply,url: comment_reply_path(@comment.id,@reply.id)  do |form| %>
    <div class="row justify-content-center">
        <div class="col-lg-3">
            <div class="form-group">
                <%= form.label :body, style: "display: block" %>
                <%= form.text_field :body, class:"form-control" %>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-lg-3">
            <%= form.submit "Add Reply", class:"btn btn-success" %>
        </div>
    </div>


<% end %>
